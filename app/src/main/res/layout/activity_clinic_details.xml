<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".Activities.Clinic_details">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_of_top_layout">

        <RelativeLayout
            android:id="@+id/icon_history"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/repple_effect_trs_overal"
            android:onClick="history">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:padding="2dp"
                android:src="@drawable/home_icon1" />

            <RelativeLayout
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/round_blc"
                android:gravity="center">

                <io.approots.reserve.CustomFont.RegularTextView
                    android:id="@+id/textmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="11dp" />
            </RelativeLayout>
        </RelativeLayout>


        <ImageView
            android:layout_width="@dimen/logo_width"
            android:layout_height="@dimen/logo_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:padding="6dp"
            android:src="@drawable/logo_trans" />

        <RelativeLayout
            android:id="@+id/iocn_chat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toStartOf="@+id/icon_notification"
            android:layout_toLeftOf="@+id/icon_notification"
            android:clickable="false"
            android:focusable="false"
            android:foreground="@drawable/repple_effect_trs_overal">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:padding="2dp"
                android:src="@drawable/home_icon2"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/round_blc"
                android:gravity="center"
                android:visibility="gone">

                <io.approots.reserve.CustomFont.RegularTextView
                    android:id="@+id/textchat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="11dp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/icon_notification"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/repple_effect_trs_overal"
            android:onClick="notification">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:padding="2dp"
                android:src="@drawable/home_icon3" />

            <RelativeLayout
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/round_blc"
                android:gravity="center">

                <io.approots.reserve.CustomFont.RegularTextView
                    android:id="@+id/textnotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="11dp" />
            </RelativeLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"

                android:layout_height="@dimen/height_clicnicbnt"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/round_white_circle"
                android:clickable="true"
                android:foreground="@drawable/repple_effect_trs"
                android:gravity="center"
                android:onClick="backss"
                android:paddingLeft="@dimen/padding_clicnic_bnt"
                android:paddingRight="@dimen/padding_clicnic_bnt">

                <io.approots.reserve.CustomFont.RegularTextView
                    android:id="@+id/type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"

                    android:gravity="center"
                    android:maxLength="150"
                    android:minWidth="60dp"
                    android:singleLine="true"
                    android:text="Clinics  X"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize_clicnicbnt" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_clicnicbnt"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round_white_circle"
                android:clickable="true"
                android:foreground="@drawable/repple_effect_trs"
                android:gravity="center"
                android:onClick="backss"
                android:paddingLeft="@dimen/padding_clicnic_bnt"
                android:paddingRight="@dimen/padding_clicnic_bnt">

                <io.approots.reserve.CustomFont.RegularTextView
                    android:id="@+id/type_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:maxWidth="200dp"
                    android:maxLength="150"
                    android:singleLine="true"
                    android:text="Skin care x"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_clicnicbnt"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round_white_circle"
                android:clickable="true"
                android:foreground="@drawable/repple_effect_trs"
                android:gravity="center"
                android:onClick="backss"
                android:paddingLeft="@dimen/padding_clicnic_bnt"
                android:paddingRight="@dimen/padding_clicnic_bnt">

                <io.approots.reserve.CustomFont.RegularTextView
                    android:id="@+id/type_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"

                    android:gravity="center"
                    android:maxLength="150"
                    android:singleLine="true"
                    android:text="Skin care x"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:background="@color/colorWhite"
        android:paddingBottom="38dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="35dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/layout_image"
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_pic"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="fitCenter" />
                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:id="@+id/div"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toEndOf="@+id/layout_image"
                    android:layout_toRightOf="@+id/layout_image">

                    <io.approots.reserve.CustomFont.SemiBoldTextView
                        android:id="@+id/name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:singleLine="true"
                        android:textColor="@color/ColorBlackage"
                        android:textSize="15dp" />

                    <io.approots.reserve.CustomFont.RegularTextView
                        android:id="@+id/address_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name_text"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"

                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp" />

                    <io.approots.reserve.CustomFont.RegularTextView
                        android:id="@+id/phone_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/address_text"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:maxLines="2"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp" />

                    <io.approots.reserve.CustomFont.SemiBoldTextView
                        android:id="@+id/appointment_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/phone_text"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:singleLine="true"

                        android:textColor="@color/ColorBlue"
                        android:textSize="30dp" />

                    <io.approots.reserve.CustomFont.RegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/phone_text"
                        android:layout_alignBaseline="@+id/appointment_text"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="0dp"
                        android:layout_toEndOf="@+id/appointment_text"
                        android:layout_toRightOf="@+id/appointment_text"
                        android:singleLine="true"
                        android:text="@string/appointments"
                        android:textColor="@color/colorGrey_text"
                        android:textSize="15dp" />
                </RelativeLayout>

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/div"
                    android:layout_marginTop="0dp"
                    tools:context=".Activites.Events_details"></fragment>

                <!--<ScrollView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_above="@+id/list"-->
                <!--android:layout_below="@+id/map">-->

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:orientation="vertical"-->
                <!--android:paddingTop="10dp">-->

                <io.approots.reserve.CustomFont.SemiBoldTextView
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/map"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:textColor="@color/ColorBlackage"
                    android:textSize="18dp" />

                <io.approots.reserve.CustomFont.RegularTextView
                    android:id="@+id/about_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/about"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp" />


                <!--</LinearLayout>-->
                <!--</ScrollView>-->

                <RelativeLayout
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@+id/about_text"
                    android:layout_marginStart="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/round_sky"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/repple_effect_trs"
                    android:onClick="doctorlist">

                    <io.approots.reserve.CustomFont.SemiBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/doctor_list"
                        android:textColor="@color/colorWhite"
                        android:textSize="15dp" />
                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>