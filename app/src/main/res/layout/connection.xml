<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/rounded_dailog">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/app_name"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/messagesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/errorcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messagesa"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:layout_above="@+id/okbutton"
        android:layout_marginBottom="-10dp"
        android:background="#666666"
        android:orientation="vertical"></LinearLayout>

    <TextView
        android:id="@+id/okbutton"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_below="@+id/errorcode"
        android:layout_marginTop="10dp"
        android:foreground="@drawable/repple_effect_trs"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="OK"
        android:textAlignment="center"
        android:textColor="#5e9cfa"
        android:textStyle="bold" />
</RelativeLayout>