<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/repple_effect_trs">


    <android.support.v7.widget.CardView
        android:id="@+id/parent_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:cardCornerRadius="@dimen/radius_button">

        <ImageView
            android:id="@+id/image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/pic" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#31000000">

            <io.approots.reserve.CustomFont.SemiBoldTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/dsc"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="35dp" />

            <io.approots.reserve.CustomFont.SemiBoldTextView
                android:id="@+id/dsc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="120dp"
                android:gravity="center"

                android:textAlignment="center"
                android:textColor="@color/colorWhite" />
        </RelativeLayout>

        <!--android:linedpacingExtra="-15sp"-->
    </android.support.v7.widget.CardView>


</FrameLayout>