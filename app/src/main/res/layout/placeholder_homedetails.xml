<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/repple_effect_trs">

    <RelativeLayout
        android:id="@+id/layout_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/round_pic">

        <View
            android:id="@+id/image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/placeholder_bg" />
    </RelativeLayout>

    <io.approots.reserve.CustomFont.SemiBoldTextView
        android:id="@+id/name"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/layout_image"
        android:layout_toRightOf="@+id/layout_image"
        android:background="@color/placeholder_bg" />

    <View
        android:id="@+id/dsc_text"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_below="@+id/name"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/layout_image"
        android:layout_toRightOf="@+id/layout_image"
        android:background="@color/placeholder_bg"
        android:singleLine="true"
        android:text="Skin discrpton"
        android:textColor="@color/colorPrimary" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:padding="9dp"
        android:src="@drawable/arrow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorGrey_broder"></LinearLayout>
</RelativeLayout>